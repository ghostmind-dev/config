{
  "name": "machine",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/ghostmind-dev/config/settings:latest": {},
    "ghcr.io/ghostmind-dev/config/extensions:latest": {},
    "ghcr.io/ghostmind-dev/init/init:latest": {
      "resetLive": true
    }
  },
  "postStartCommand": "deno run -A -r jsr:@ghostmind/init",
  "postCreateCommand": "deno run -A /usr/local/share/post-create.ts",
  "containerEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "/Volumes/Projects/prototype/config",
    "DOCKER_CONFIG": "/home/vscode/.docker-no-creds",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "remoteEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_TOKEN": "${localEnv:VAULT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "mounts": [],
  "runArgs": [
    "--cap-add=CAP_IPC_LOCK",
    "--cap-add=NET_ADMIN",
    "--network=host",
    "--name=config"
  ]
}
