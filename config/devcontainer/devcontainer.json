{
  "name": "machine",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PROJECT_DIR": "${env:HOME}${env:USERPROFILE}/projects/container/machine"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/ghostmind-dev/features/config:latest": {},
    "ghcr.io/ghostmind-dev/features/extensions:latest": {},
    "ghcr.io/ghostmind-dev/features/themes:latest": {},
    "ghcr.io/ghostmind-dev/features/zsh:latest": {
      "theme": "codespaces"
    }
  },
  "postStartCommand": "deno run -A https://raw.githubusercontent.com/ghostmind-dev/init/main/init/main.ts",
  "postCreateCommand": "deno run -A /usr/local/share/post-create.ts",
  "remoteEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "${env:HOME}${env:USERPROFILE}/projects/container/machine",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_ROOT_TOKEN": "${localEnv:VAULT_ROOT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "containerEnv": {
    "INIT_RESET_LIVE": "true",
    "INIT_LOGIN_GCP": "true",
    "INIT_LOGIN_GHCR": "false",
    "INIT_LOGIN_CLOUDFLARE": "true",
    "WHY_AM_I_HERE": "true"
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=ghostmind-machine-history,target=/commandhistory,type=volume",
    "source=${env:HOME}${env:USERPROFILE}/projects/container/machine,target=/Users/francoisseguin/projects/container/machine,type=bind"
  ],
  "runArgs": [
    "--cap-add=CAP_IPC_LOCK",
    "--cap-add=NET_ADMIN",
    "--name=machine-devcontainer"
  ],
  "customizations": {
    "vscode": {
      "extensions": []
    }
  }
}