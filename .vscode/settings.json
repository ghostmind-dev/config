{
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "prettier.singleQuote": true,
  "files.exclude": {
    ".gitignore": true,
    "**/.git": true,
    "**/.terraform": true,
    "**/.tfstate": true,
    "**/.npmrc": true,
    "**/dev/dvc-command": true,
    "**/.env.backup": true,
    "**/.dockerignore": true,
    "**/dvc-command": true,
    "**/gha**": true,
    "**/package-lock.json": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.next": true,
    "**/dist": true,
    "**/.terraform.lock.hcl": true,
    "**/backend.tf": true,
    "**/versions.tf": true,
    "**/.npmignore": true
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "vsicons.associations.folders": [
    { "icon": "e2e", "extensions": ["zsh"], "format": "svg" },
    { "icon": "e2e", "extensions": ["git"], "format": "svg" },
    { "icon": "e2e", "extensions": ["devcontainer"], "format": "svg" },
    { "icon": "e2e", "extensions": ["deno"], "format": "svg" },
    { "icon": "e2e", "extensions": ["vscode"], "format": "svg" },
    { "icon": "buildkite", "extensions": ["run"], "format": "svg" },
    { "icon": "e2e", "extensions": ["meta"], "format": "svg" }
  ],
  "json.schemas": [
    {
      "fileMatch": ["**/meta.json"],
      "url": "https://raw.githubusercontent.com/ghostmind-dev/config/main/config/meta/schema.json"
    }
  ]
}
